<svg xmlns="http://www.w3.org/2000/svg" width="400" height="300" viewBox="0 0 400 300">
  <defs>
    <linearGradient id="projectGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#4facfe;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#00f2fe;stop-opacity:1" />
    </linearGradient>
  </defs>
  
  <!-- Background -->
  <rect width="400" height="300" fill="url(#projectGradient)" rx="15" ry="15" />
  
  <!-- Car Illustration -->
  <g transform="translate(200, 150) scale(1.5)">
    <!-- Car Body -->
    <rect x="-60" y="-15" width="120" height="30" rx="10" ry="10" fill="#ffffff" opacity="0.9" />
    
    <!-- Car Windows -->
    <rect x="-40" y="-25" width="50" height="15" rx="5" ry="5" fill="#333333" opacity="0.8" />
    
    <!-- Car Wheels -->
    <circle cx="-30" cy="20" r="15" fill="#333333" />
    <circle cx="-30" cy="20" r="8" fill="#666666" />
    <circle cx="30" cy="20" r="15" fill="#333333" />
    <circle cx="30" cy="20" r="8" fill="#666666" />
    
    <!-- Car Details -->
    <rect x="-55" y="0" width="10" height="5" fill="#ff5555" />
    <rect x="45" y="0" width="10" height="5" fill="#ff5555" />
  </g>
  
  <!-- UI Elements -->
  <rect x="50" y="230" width="300" height="40" rx="5" ry="5" fill="#ffffff" opacity="0.8" />
  <rect x="60" y="240" width="80" height="20" rx="3" ry="3" fill="#333333" opacity="0.6" />
  <rect x="150" y="240" width="80" height="20" rx="3" ry="3" fill="#333333" opacity="0.6" />
  <rect x="240" y="240" width="100" height="20" rx="3" ry="3" fill="#333333" opacity="0.6" />
  
  <!-- Text -->
  <text x="200" y="280" font-family="Arial" font-size="16" fill="#ffffff" text-anchor="middle">Car Rental Platform</text>
</svg>