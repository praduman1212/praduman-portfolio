  <circle cx="180" cy="90" r="4" fill="#d63031" />
  <circle cx="260" cy="90" r="4" fill="#00b894" />
  
  <!-- Travel Options -->
  <rect x="70" y="140" width="80" height="40" rx="5" ry="5" fill="#f1f2f6" />
