  <text x="290" y="185" font-family="Arial" font-size="10" fill="#2d3436" text-anchor="middle">Cars</text>
  
  <!-- Bottom Navigation -->
  <rect x="50" y="210" width="300" height="40" rx="0" ry="10" fill="#2d3436" opacity="0.8" />
  <circle cx="110" cy="230" r="8" fill="#ffffff" opacity="0.6" />
  <circle cx="200" cy="230" r="8" fill="#ffffff" opacity="0.6" />
  <circle cx="290" cy="230" r="8" fill="#ffffff" opacity="0.6" />
  
